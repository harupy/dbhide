{
  "manifest_version": 2,
  "name": "DBHide",
  "version": "1.0",
  "description": "Hide cells and code on a Databricks notebook",
  "icons": {
    "48": "logo.png"
  },
  "browser_action": {
    "default_title": "dbhide",
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.databricks.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["tabs"]
}
